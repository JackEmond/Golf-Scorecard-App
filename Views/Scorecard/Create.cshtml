@model MvcGolfScorecardApp.Models.Scorecard

@{
    ViewData["Title"] = "Create";
}


     <script src="@Url.Content("~/js/ScorecardCreate.js")"></script>

<br />
<br />
<br />

<!-- Course Name and Information -->
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>


    <div id="course-select">
        <label asp-for="Course"></label>
        <select onchange="showParData()" asp-for="CourseId" asp-items="ViewBag.CourseId">
        <option value="">-- Select Course --</option>
        </select>
        <a class="link" href="../Courses/Create?returnUrl=ScorecardCreate">Create A New Course -></a>
        <span asp-validation-for="CourseId" class="text-danger" />
    </div>


    <div class="alignCenter">
        <label asp-for="DatePlayed" ></label>
        <input asp-for="DatePlayed"/>
    </div>
    
    <br />


    <!--=-------------------
        Scorecard 
    ----------------------->

    <!-- Holes 1-9 -->
    <div class="flex-container-scorecard">
        <div class="items-info hole">Hole #</div>
        <div class="items-scorecard hole">1</div>
        <div class="items-scorecard hole">2</div>
        <div class="items-scorecard hole">3</div>
        <div class="items-scorecard hole">4</div>
        <div class="items-scorecard hole">5</div>
        <div class="items-scorecard hole">6</div>
        <div class="items-scorecard hole">7</div>
        <div class="items-scorecard hole">8</div>
        <div class="items-scorecard hole">9</div>
        <div class="items-scorecard hole">OUT</div>
    </div>
    
    <!-- What is your score for holes 1 - 9 -->
    <div class="flex-container-scorecard">
        <div class="items-info">Score</div>
        <div class="items-scorecard">
            <input asp-for="HoleOne" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleTwo" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleThree" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleFour" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleFive" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleSix" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleSeven" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleEight" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleNine" class="form-control" />
        </div>
        <div class="items-scorecard">
            TOT
        </div>
    </div>

    <!-- Show Par for holes 1 - 9  -->
    <div class="flex-container-scorecard">
        <div class="items-info par"> Par </div>  
        <div class="items-scorecard" id="parholeOne"></div>  
        <div class="items-scorecard" id="parholeTwo"></div>  
        <div class="items-scorecard" id="parholeThree"></div>  
        <div class="items-scorecard" id="parholeFour"></div>  
        <div class="items-scorecard" id="parholeFive"></div>  
        <div class="items-scorecard" id="parholeSix"></div>  
        <div class="items-scorecard" id="parholeSeven"></div>  
        <div class="items-scorecard" id="parholeEight"></div>  
        <div class="items-scorecard" id="parholeNine"></div>  
        <div class="items-scorecard par">Final</div>  
    </div> 

    <br />
    <br />

    <!-- Holes 10 - 18 -->
    <div class="flex-container-scorecard">
        <div class="items-info hole">Hole #</div>
        <div class="items-scorecard hole">10</div>
        <div class="items-scorecard hole">11</div>
        <div class="items-scorecard hole">12</div>
        <div class="items-scorecard hole">13</div>
        <div class="items-scorecard hole">14</div>
        <div class="items-scorecard hole">15</div>
        <div class="items-scorecard hole">16</div>
        <div class="items-scorecard hole">17</div>
        <div class="items-scorecard hole">18</div>
        <div class="items-scorecard hole">IN</div>
    </div>
    
    <!-- What is your score for holes 10 - 18 -->
    <div class="flex-container-scorecard">
        <div class="items-info">Score</div>
        <div class="items-scorecard">
            <input asp-for="HoleTen" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleEleven" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleTwelve" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleThirteen" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleFourteen" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleFifteen" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleSixteen" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleSeventeen" class="form-control" />
        </div>
        <div class="items-scorecard">
            <input asp-for="HoleEighteen" class="form-control" />
        </div>
        <div class="items-scorecard">
            TOT
        </div>
    </div>
    <div class="flex-container-scorecard">
        <div class="items-info par"> Par </div>  
        <div class="items-scorecard" id="parholeTen"></div>  
        <div class="items-scorecard" id="parholeEleven"></div>  
        <div class="items-scorecard" id="parholeTwelve"></div>  
        <div class="items-scorecard" id="parholeThirteen"></div>  
        <div class="items-scorecard" id="parholeFourteen"></div>  
        <div class="items-scorecard" id="parholeFifteen"></div>  
        <div class="items-scorecard" id="parholeSixteen"></div>  
        <div class="items-scorecard" id="parholeSeventeen"></div>  
        <div class="items-scorecard" id="parholeEighteen"></div>  
        <div class="items-scorecard par">Final</div>  
    </div> 

    <br />

     <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary create crud-button" />
    </div>


</form>

<div>
    <a asp-action="Index" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
